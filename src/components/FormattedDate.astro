---
interface Props {
  date?: Date | string;
}

const { date } = Astro.props;
const formattedDate = date 
  ? new Date(date).toLocaleDateString("en-us", { month: "short", day: "numeric", year: "numeric" }) 
  : "Present";
---

<time datetime={date ? new Date(date).toISOString() : ""}>
  {formattedDate}
</time>
